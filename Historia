        // --- Lógica da Aplicação ---
        const tabTurma = document.getElementById('tab-turma');
        const tabProfessor = document.getElementById('tab-professor');
        const panelTurma = document.getElementById('panel-turma');
        const panelProfessor = document.getElementById('panel-professor');
        
        const diaSelect = document.getElementById('dia-semana');
        const periodoSelect = document.getElementById('periodo');
        const professorSelect = document.getElementById('select-professor');

        const buscarBtn = document.getElementById('buscar-btn');
        const resultadoDiv = document.getElementById('resultado');

        let activeTab = 'turma';

        // Lógica das abas
        tabTurma.addEventListener('click', () => {
            activeTab = 'turma';
            tabTurma.classList.add('active');
            tabProfessor.classList.remove('active');
            panelTurma.classList.remove('hidden');
            panelProfessor.classList.add('hidden');
        });

        tabProfessor.addEventListener('click', () => {
            activeTab = 'professor';
            tabProfessor.classList.add('active');
            tabTurma.classList.remove('active');
            panelProfessor.classList.remove('hidden');
            panelTurma.classList.add('hidden');
        });

        function capitalizar(str) {
            if (!str) return '';
            return str.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase()).join(' ');
        }

        function renderizarResultados(resultados, titulo) {
            resultadoDiv.innerHTML = ''; 

            if (resultados.length === 0) {
                resultadoDiv.innerHTML = `
                    <div class="text-center bg-yellow-50 border-l-4 border-yellow-400 text-yellow-700 p-4 rounded-lg">
                        <p class="font-bold">Nenhuma disciplina encontrada</p>
                        <p>Verifique os filtros de busca.</p>
                    </div>
                `;
                return;
            }
            
            const headerHTML = `<div class="mb-6"><h2 class="text-2xl font-bold text-gray-800">${titulo}</h2></div>`;

            const cardsHTML = resultados.map(aula => `
                <div class="bg-white border border-gray-200 rounded-xl p-4 shadow-sm hover:shadow-md transition-shadow duration-300 mb-4">
                    <div class="flex flex-col sm:flex-row justify-between gap-2 sm:gap-4">
                        <div class="flex-grow">
                            <p class="text-base font-semibold text-blue-700">${aula.disciplina}</p>
                            <p class="text-sm text-gray-500">${activeTab === 'professor' ? `${capitalizar(aula.dia)}-feira | ${aula.periodo}º Período` : capitalizar(aula.professor)}</p>
                        </div>
                        <div class="flex items-center gap-6 sm:gap-4 flex-shrink-0 pt-3 sm:pt-0 border-t sm:border-t-0">
                            <div class="text-left">
                                <p class="text-xs text-gray-500">Horário</p>
                                <p class="font-medium text-gray-800 text-sm">${aula.horario}</p>
                            </div>
                             <div class="text-left">
                                <p class="text-xs text-gray-500">Sala</p>
                                <p class="font-medium text-gray-800 text-sm">${aula.sala}</p>
                            </div>
                        </div>
                    </div>
                </div>
            `).join('');

            resultadoDiv.innerHTML = headerHTML + '<div>' + cardsHTML + '</div>';
        }

        function buscar() {
            if (activeTab === 'turma') {
                const dia = diaSelect.value;
                const periodo = parseInt(periodoSelect.value, 10);
                const resultados = cronograma.filter(aula => aula.periodo === periodo && aula.dia === dia);
                const diaFormatado = capitalizar(dia);
                renderizarResultados(resultados, `Horário para ${diaFormatado}-feira - ${periodo}º Período`);
            } else { // Busca por professor
                const nomeProfessor = professorSelect.value;
                const resultados = cronograma.filter(aula => aula.professor === nomeProfessor);
                renderizarResultados(resultados, `Aulas de: ${capitalizar(nomeProfessor)}`);
            }
        }
        
        function popularProfessores() {
            const nomes = cronograma.map(aula => aula.professor);
            const nomesUnicos = [...new Set(nomes)];
            nomesUnicos.sort((a, b) => a.localeCompare(b)); // Ordena alfabeticamente
            
            nomesUnicos.forEach(nome => {
                if (nome && nome !== "A DEFINIR") {
                    const option = document.createElement('option');
                    option.value = nome;
                    option.textContent = capitalizar(nome);
                    professorSelect.appendChild(option);
                }
            });
        }

        buscarBtn.addEventListener('click', buscar);
        
        window.onload = function() {
            // Popula o menu de professores
            popularProfessores();
        };

    </script>
</body>
</html>

